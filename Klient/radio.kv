#:kivy 2.2.1

<RadioGUI>
    size_hint: .97, .97
    pos_hint: {'center_x': .5, 'center_y': .5}
    do_default_tab: False
    tab_pos: 'top_mid'
    tab_width: root.width/3

    TabbedPanelItem:
        text: 'RADIO'
        bold: True

        BoxLayout:
            orientation: 'vertical'
            padding: 25
            

            Image:
                source: "zasoby\logo.png"
            Label:
                size_hint: None, .6
                pos_hint: {'center_x': .5}
                text: 'Teraz gramy:'
                font_size: 25
                
            Label:
                id: song_title
                size_hint: None, .9
                pos_hint: {'center_x': .5}
                text: 'pioseneczka'
                font_size: 20
                bold: True

            BoxLayout:
                size_hint: .6, None
                padding: 25
                pos_hint: {'center_x': .5}
                orientation: 'horizontal'

                Button:
                    id: skip_button
                    text: 'POMIŃ'
                    bold: True
                    on_release: root.button_skip_song()

                Widget:
                    size_hint: .5, None

                Button:
                    id: request_title_button
                    text: 'ODŚWIEŻ TYTUŁ'
                    bold: True
                    on_release: root.button_request_queue()

    TabbedPanelItem:
        text: 'KOLEJKA'
        bold: True

        BoxLayout:
            orientation: 'vertical'
            padding: 25
            
            ScrollView:
                do_scroll_x: False
                size: self.size

                GridLayout:
                    id: gridqueue
                    cols: 3
                    size_hint_y: None
                    width: 530
                    spacing: "10dp"
                    padding: "25dp"

            BoxLayout:
                orientation: 'horizontal'
                size_hint: 1, .3
                padding: 25
                Button:
                    id: request_queue_button
                    text: 'Odśwież'
                    on_release: root.button_request_queue()

                Widget:
                    size_hint: .5, None

                Button:
                    id: send_queue_button
                    text: 'Prześlj kolejkę'
                    on_release: root.button_send_queue()



    TabbedPanelItem:
        id: tab3
        text: 'WYŚLIJ PLIK'
        bold: True

        BoxLayout:
            orientation: 'vertical'
            padding: 25

            Button:
                id: discswitcher
                text: 'Obecny dysk: C:\nNastępny dysk'
                size_hint: .2, .2
                pos_hint: {'center_x': .5}
                on_release: root.switch_disc()

            FileChooserIconView:
                id: filechooser
                padding: 25
                path: 'C:\\'
                filters: ['*.wav']
                on_selection: root.file_selected(*args)

            Widget:
                size_hint: None, .1

            Button:
                id: send_file_button
                text: 'Wyślij plik'
                size_hint: .4, .2
                pos_hint: {'center_x': .5}
                on_release: root.button_send_file()


